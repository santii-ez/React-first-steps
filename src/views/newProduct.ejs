<!DOCTYPE html>
<html lang="en">
    <!-- HEAD -->
    <head lang="en"> 
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
        <title>TecnoMundo</title> 
        <base href = "/"> 
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link href="css/normalize.css" rel="stylesheet">
        <link href="css/styleunificado.css" rel="stylesheet">
    </head>
    <!-- HEADER -->
    <%- include('./partials/header') %>
<body>
    <main>
        <section class="newProductSection">
        <div class="container products-wrapper">
		        <div class="row">
			        <div class="col-12 titleContainerNP">
				        <h2 class="products-title">Formulario de Creación de Productos</h2>
			        </div>
		        </div>
            <div class="col-12 formulario-login">
            <form action="/product/store" method="post" enctype="multipart/form-data" class="newProductForm">
                <!-- Nombre del Producto -->
                <div class="form-group row">
                    <label for="name"><h4 class="titleNewProduct">Nombre del producto </h4></label>
                    <div class="col-sm-12">
                        <input type="text" name="name" id="name" class="form-control input-textarea" placeholder="Ej. Galaxy S22">
                    </div>
                  </div>
                  <!-- descripcion - textarea -->
                  <div class="form-group row">
                    <label for="description"><h4 class="titleNewProduct">Descripción</h4></label>
                    <div class="col-sm-12">
                        <textarea class="form-control input-textarea"  name="description" id="description" rows="3"></textarea>
                    </div>
                  </div>
                  <!-- imagen -->
                  <div class="form-group row">
                    <label for="images"><h4 class="titleNewProduct">Ingrese la imágen</h4></label>
                    <div class="col-sm-12">
                        <input type="file" name="images" class="form-control input-textarea"  id="images">
                    </div>
                  </div>
                  <!-- categoria -->
                                    
                   
                    <div class="form-group row">
                      <h4 class="titleNewProduct"> Categoría </h4>
                    </div>
                      <div class="col-sm-12 form-check-inline input-category ">
                        <div class="form-check padding-left-grow-1">
                          <input class="form-check-input" type="radio" name="category" value="phones" checked>
                          <label class="form-check-label" for="category">
                            Celular
                          </label>
                        </div>

                        <div class="form-check padding-left-grow-1">
                          <input class="form-check-input" type="radio" name="category" value="tablets">
                          <label class="form-check-label" for="category">
                            Tablet
                          </label>
                        </div>
                        <div class="form-check padding-left-grow-1">
                          <input class="form-check-input" type="radio"  name="category" value="laptops">
                          <label class="form-check-label" for="category">
                            Laptop
                          </label>
                        </div>
                       
                      </div>
                      <div class="form-group row">
                        <label for="inputState"><h4 class="titleNewProduct"> Marca </h4></label>
                        <% let marcas = ["Iphone", "Samsung", "Motorola", "Huawei", "OnePlus", "Xiaomi"] %> 
                        <select id="inputState" class="form-control">
                            <option >Elige la marca </option>
                          <% marcas.forEach(item => { %> 
                            <option name="brand" value="<%= item %>"><%= item %> </option>
                            <% }) %>
                        </select>
                      </div>
                      <div class="form-group row">
                        <label for="inputState"><h4 class="titleNewProduct"> Sección </h4></label>
                        <% let section = ["lo mas buscado", "celulares", "laptops", "tablets"] %> 
                        <select id="inputState" class="form-control">
                            <option >Elige una sección </option>
                          <% section.forEach(item => { %> 
                            <option name="brand" value="<%= item %>"><%= item %> </option>
                            <% }) %>
                        </select>
                      </div>

                      <div class="price-discount form-group">
                        <div class="col-6 col-md-6">
                          <label  for="price" class="newProductLabel"> <h4 class="titleNewProduct"> Precio $ </h4>   </label>
                          <input type="number" name="price" class="newProductInput" min="1" step="any">
                      </div>
                   
                      <div class="col-6 col-md-6">
                          <label  for="price" class="newProductLabel"> <h4 class="titleNewProduct">Descuento </h4></label>
                          <input type="number" name="discount" class="newProductInput" step=".01">
                      </div>

                      </div>
                      
                                      
                  <div class="form-group">
                    <div class="col-sm-12 ">
                      <button type="submit" class=" submit-login btn-create">Crear Producto</button>
                    </div>
                  </div>
                  </form>
            </div>
        </div>
        </section>
    </main>
    <!-- FOOTER -->
    <%- include('./partials/footer') %>
</body>
</html>